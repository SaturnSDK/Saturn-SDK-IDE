<?xml version="1.0"?>
<!DOCTYPE CodeBlocks_compiler>
<CodeBlocks_compiler name="LLVM Clang Compiler"
                     id="clang">
    <Path type="master">
        <Search envVar="PATH"
                for="C"/>
        <if platform="windows">
            <Fallback path="C:\MinGW"/>
        </if>
        <else>
            <Fallback path="/usr"/>
        </else>
    </Path>
</CodeBlocks_compiler>
